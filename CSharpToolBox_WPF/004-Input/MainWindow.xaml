<Window x:Class="_004_Input.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_004_Input"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <StackPanel>
        <TextBox Width="300" Height="50" TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" Name="tb"></TextBox>
        <PasswordBox Password="123456" PasswordChar="*" MaxLength="8" Name="pb"></PasswordBox>
        <RichTextBox>
            <FlowDocument>
                <Paragraph>
                    <Run>Hello</Run>
                    <Run Foreground="Red" FontWeight="Bold" FontStyle="Italic">World</Run>
                    <Hyperlink NavigateUri="https://www.baidu.com">WPF</Hyperlink>
                </Paragraph>
                <Paragraph>
                    <Run>Hello</Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </StackPanel>
</Window>