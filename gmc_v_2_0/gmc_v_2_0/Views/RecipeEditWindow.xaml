                            <ContentPresenter Grid.ColumnSpan="4" HorizontalAlignment="Center"
                                              VerticalAlignment="Center" Content="Wafer Rotatior" Margin="10,5,10,0">
                            </ContentPresenter>
                            <Rectangle Grid.Column="3" VerticalAlignment="Stretch" Width="1" Fill="LightGray"
                                       Visibility="Visible">
