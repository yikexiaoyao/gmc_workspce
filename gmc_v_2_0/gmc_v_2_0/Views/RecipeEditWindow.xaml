<Window x:Class="gmc_v_2_0.Views.RecipeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:gmc_v_2_0.Views"
        mc:Ignorable="d"
        Background="Transparent" FontFamily="Microsoft YaHei" FontWeight="ExtraLight" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen"
        Title="RecipeEditWindow" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <!-- 配方数据表头样式 -->
        <!--<Style x:Key="RecipeDataHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Height" Value="35"></Setter>
        </Style>-->
        <!-- 配方数据内容样式1 -->
        <!--<Style x:Key="RecipeDataItemsStyle" TargetType="ListViewItem">
            <Setter Property="Height" Value="35"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        </Style>-->
        <!-- 配方数据内容样式2 -->
        <Style x:Key="RecipeDataItemsStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Foreground" Value="White"></Setter>
                    <Setter Property="CaretBrush" Value="White"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--配方编辑窗口关闭-->
        <ControlTemplate TargetType="Button" x:Key="CloseButtonTemplate">
            <Grid Background="Transparent" Name="back">
                <TextBlock Text="&#xe69a;" FontFamily="{StaticResource iconfont}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="16">
                </TextBlock>
            </Grid>
        </ControlTemplate>
        <!-- 操作按钮 -->
        <Style x:Key="OperationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Margin" Value="10,0,0,0"></Setter>
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <!-- 配方表格样式 -->
        <Style x:Key="StepNumStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Content="Step Num" Margin="10,0,10,0">
                            </ContentPresenter>
                            <Rectangle Grid.Column="1" VerticalAlignment="Stretch" Width="1" Height="70"
                                       Fill="LightGray" Visibility="Visible">
                            </Rectangle>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StepTimeStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Content="Step Time" Margin="10,0,10,0">
                            </ContentPresenter>
                            <Rectangle Grid.Column="1" VerticalAlignment="Stretch" Width="1" Height="70"
                                       Fill="LightGray" Visibility="Visible">
                            </Rectangle>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WaferRotatiorStyle" TargetType="DataGridColumnHeader">
